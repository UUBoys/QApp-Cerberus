// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}
datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
  schemas = ["qapp_auth"]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String
  firstName String
  lastName  String
  password  String?
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index(id)
  @@schema("qapp_auth")
}

enum Role {
  USER
  MANAGER
  DJ
  ADMIN

  @@schema("qapp_auth")
}